# Editor configuration, see https://editorconfig.org
root = true

[*.{js,ts}]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,json}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.{css,sass,scss}]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
